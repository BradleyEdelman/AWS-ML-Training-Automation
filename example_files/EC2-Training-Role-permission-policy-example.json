{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "S3LimitedAccess",
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:PutObject",
                "s3:ListBucket"
            ],
            "Resource": [
                "arn:aws:s3:::grateful-dead-chatbot",
                "arn:aws:s3:::grateful-dead-chatbot/*"
            ]
        },
        {
            "Sid": "EC2FullLaunchPermissions",
            "Effect": "Allow",
            "Action": [
                "ec2:RunInstances",
                "ec2:DescribeInstances",
                "ec2:StartInstances",
                "ec2:StopInstances",
                "ec2:TerminateInstances",
                "ec2:RequestSpotInstances",
                "ec2:CancelSpotInstanceRequests",
                "ec2:DescribeInstanceStatus"
            ],
            "Resource": "*"
        },
        {
            "Sid": "IAMPassRole",
            "Effect": "Allow",
            "Action": "iam:PassRole",
            "Resource": "arn:aws:iam::084375547262:role/EC2-Training-Role"
        },
        {
            "Sid": "CloudWatchLoggingLimited",
            "Effect": "Allow",
            "Action": [
                "logs:DescribeLogGroups"
            ],
            "Resource": "*"
        },
        {
            "Sid": "RestrictedLogGroupAccess",
            "Effect": "Allow",
            "Action": [
                "logs:DescribeLogStreams",
                "logs:GetLogEvents",
                "logs:CreateLogStream",
                "logs:PutLogEvents"
            ],
            "Resource": [
                "arn:aws:logs:eu-central-1:084375547262:log-group:/aws/ec2/training-logs",
                "arn:aws:logs:eu-central-1:084375547262:log-group:/aws/ec2/training-logs:*"
            ]
        }
    ]
}